{
  "manifest_version": 2,
  "name": "FalafelForkyFeather",
  "version": "1.0.1",
  "description": "A fork of YAFFeather created for Falafel. Originally by sw33ze, tweaked by Alex, minor features added for falafel.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [{
    "matches": [
      "https://*.nationstates.net/*"
    ],
    "js": [
      "content.js"
    ]
  }],

  "options_ui":{
    "page":"settings.html"
  },

  "permissions":["storage"],

  "browser_specific_settings":{
	  "gecko":{
		  "id":"forkyfeather@falafel"
	  }
  }
}
